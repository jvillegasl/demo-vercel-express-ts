{
	"name": "demo-vercel-express-ts",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "globstar -- node --test --no-warnings --loader tsx **/*.test.ts",
		"dev": "nodemon",
		"build": "rm -rf ./api/dist/ && tsc --project tsconfig.build.json",
		"start": "node ./api/dist/server.js",
		"lint": "eslint . --ext ts,tsx",
		"pretty": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,sass}\"",
		"deploy:preview": "npm run build && vercel"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.19",
		"@types/supertest": "^2.0.14",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"eslint": "^8.51.0",
		"globstar": "^1.0.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.3",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"tsx": "^3.13.0"
	},
	"dependencies": {
		"express": "^4.18.2",
		"module-alias": "^2.2.3"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"api"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register ./api/server.ts",
		"ext": "ts, js"
	}
}
